<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"

           style="-fx-background-color: linear-gradient(to bottom, #2e046d, #8a4cc1);"
           prefWidth="800" prefHeight="600">

   <AnchorPane>

      <!-- Titolo -->
      <Label text="Scegli la risposta corretta"
             AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             alignment="CENTER"
             style="-fx-font-size: 24px; -fx-text-fill: white;" />

      <!-- Barra tempo + Timer -->
      <HBox spacing="10" alignment="CENTER"
            AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <ProgressBar fx:id="progressBar" prefWidth="200" progress="0.25"
                      style="-fx-accent: #00ffcc;" />
         <Label fx:id="timerLabel" text="2:48"
                style="-fx-text-fill: white; -fx-font-size: 14px;" />
      </HBox>

      <!-- Contatore domanda + Pulsante Avanti -->
      <VBox spacing="10" alignment="TOP_RIGHT"
            AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <Label fx:id="questionCountLabel" text="3/12"
                style="-fx-background-color: transparent; -fx-text-fill: white;
                          -fx-font-size: 16px; -fx-border-color: white;
                          -fx-border-radius: 20px; -fx-padding: 5 10;
                          -fx-border-width: 1px; -fx-background-radius: 20px;" />
         <Button fx:id="nextButton" text="Avanti"
                 style="-fx-background-color: white; -fx-text-fill: #5a00a5;
                           -fx-font-weight: bold; -fx-background-radius: 12px;" />
      </VBox>

      <!-- Sezione centrale: domanda + risposte -->
      <VBox fx:id="questionContainer" spacing="20" alignment="TOP_CENTER"
            AnchorPane.topAnchor="120.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0"
            AnchorPane.bottomAnchor="40.0">

         <!-- Domanda -->
         <Label fx:id="questionText" wrapText="true" textAlignment="CENTER"
                maxWidth="600"
                style="-fx-background-color: white; -fx-padding: 20px;
                          -fx-font-size: 16px; -fx-background-radius: 20px;
                          -fx-text-fill: black;" />

         <!-- Risposte -->
         <VBox fx:id="answerBox" spacing="15" alignment="CENTER">
            <Button text="Risposta 1" styleClass="answer-button" />
            <Button text="Risposta 2" styleClass="answer-button" />
            <Button text="Risposta 3" styleClass="answer-button" />
            <Button text="Risposta 4" styleClass="answer-button" />
         </VBox>
      </VBox>

   </AnchorPane>
</StackPane>
